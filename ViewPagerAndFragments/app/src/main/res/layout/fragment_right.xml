<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RightFragment"
    android:background="@color/darkGray"
    android:padding="16dp">


    <TextView
        android:id="@+id/todaysTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/todaymiles"
        android:textSize="16dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_below="@+id/todaysTxt"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26dp"
        android:textColor="@color/colorAccent"
        android:text="1.76"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/startImgView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/steps"
        android:scaleType="center"
        android:layout_centerInParent="true"
        android:background="@drawable/white_big_circle"/>



    <TextView
        android:id="@+id/gpsTxt"
        android:layout_below="@+id/startImgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/totalGPsMiles"
        android:textSize="16dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_below="@+id/gpsTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" - - -"
        android:textSize="26dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"/>

</RelativeLayout>